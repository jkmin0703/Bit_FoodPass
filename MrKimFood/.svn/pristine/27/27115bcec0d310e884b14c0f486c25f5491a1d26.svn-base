/* common */
body {
	font-family: Arial, sans-serif;
	font-size: 0.9em;
}

.main {
	width: 100%
}

/* header */
.header {
	width: 100%;
	border-bottom: 1px solid black;
}

.footer {
	border-top: 1px solid black;
	text-align: center;
}

.logo {
	width: 40%;
	display: inline-block;
	margin-right: 29%;
}

.header .navigation {
	width: 30%;
	line-height: 30px;
	display: inline-block;
	vertical-align: bottom;
	margin-bottom: 2px;
}

.header .navigation img {
	width: 25px;
	height: 25px;
	display: inline;
	vertical-align: middle;
}

.header .navigation div {
	display: inline;
	vertical-align: middle;
}

.member_profile {
	width: 23%;
	min-width: 250px;
	height: 100px;
	background: lightyellow;
	position: absolute;
	top: 120px;
	left: 70%;
	visibility: hidden; /*슬라이드영역 숨김(나진수)*/
}

.member_profile_header {
	width: 100%;
	height: 10px;
}

.member_profile_img {
	width: 35%;
	height: 90px;
	float: left;
	text-align: center;
}

.member_profile_info {
	width: 60%;
	height: 90px;
	float: left;
}

.profile_modify {
	width: 16%;
	min-width: 200px;
	background: lightgreen;
	position: absolute;
	top: 250px;
	left: 70%;
	visibility: hidden; /*슬라이드영역 숨김(나진수)*/
}

.profile_modify_img {
	width: 100%;
	text-align: center;
	padding-top: 20px;
}

.profile_modify_img div {
	width: 100%;
	margin: 0.6em auto;
}

.profile_modify_info {
	width: 100%;
}

.profile_modify_info table {
	margin: 0.6em auto;
}

.profile_modify_btn {
	width: 100%;
	text-align: center;
	margin: 0.6em auto 1.5em auto;
}